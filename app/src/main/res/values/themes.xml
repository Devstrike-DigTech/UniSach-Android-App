<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjectUniSachStoreSide" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_color_defined</item>
        <item name="colorPrimaryVariant">@color/custom_color_defined</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/custom_accent_color</item>
        <item name="colorSecondaryVariant">@color/custom_accent_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Default text fonts. -->
        <item name="android:textViewStyle">@style/BalsamiqTextViewStyle</item>
        <item name="buttonStyle">@style/BalsamiqButtonStyle</item>

        <!--        <item name="android:buttonStyleNews">@style/NewsStyle</item>-->
    </style>

    <style name="Theme.ProjectUniSachStoreSide.NoActionBarAndStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>


    </style>

    <style name="BalsamiqTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/balsamiq_sans_regular</item>
    </style>

    <style name="BalsamiqButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/balsamiq_sans_bold</item>
    </style>

</resources>