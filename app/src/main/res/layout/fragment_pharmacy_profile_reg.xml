<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.auth.ui.pharmacyregistration.PharmacyProfileReg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_pharmacy_title"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/padding_mini"
            android:layout_marginStart="@dimen/padding_mini"
            android:layout_marginEnd="@dimen/padding_mini"
            android:padding="@dimen/padding_mini"
            android:textSize="@dimen/text_xxl"
            android:id="@+id/register_pharmacy_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_pharmacy_subtitle"
            android:textAlignment="center"
            android:padding="@dimen/padding_mini"
            android:textSize="@dimen/text_l"
            android:layout_below="@id/register_pharmacy_title"
            android:id="@+id/register_pharmacy_subtitle"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/step_layout"
            android:layout_below="@id/register_pharmacy_subtitle"
            android:weightSum="11"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="@dimen/padding_mini"
                android:layout_margin="@dimen/padding_mini">


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:cardCornerRadius="100dp"
                    app:cardBackgroundColor="@color/purple_200"
                    android:padding="@dimen/padding_mini"
                    android:id="@+id/card_step_one"
                    android:layout_centerHorizontal="true"
                    app:cardElevation="@dimen/padding_mini"
                    android:layout_margin="@dimen/padding_mini">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/text_one"
                        android:padding="@dimen/padding_mini"
                        android:textColor="@color/white"
                        android:textAlignment="center" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_step_one"
                    android:text="@string/profile_text"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/purple_200"/>

            </RelativeLayout>


            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="2.5"
                android:background="@color/grey"
                android:layout_marginTop="@dimen/padding_mega"
                android:padding="@dimen/padding_mini"/>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="@dimen/padding_mini"
                android:layout_margin="@dimen/padding_mini">


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:cardCornerRadius="100dp"
                    app:cardBackgroundColor="@color/grey"
                    android:padding="@dimen/padding_mini"
                    android:id="@+id/card_step_two"
                    android:layout_centerHorizontal="true"
                    app:cardElevation="@dimen/padding_mini"
                    android:layout_margin="@dimen/padding_mini">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/text_two"
                        android:padding="@dimen/padding_mini"
                        android:textColor="@color/white"
                        android:textAlignment="center" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_step_two"
                    android:text="@string/address_text"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/grey"/>

            </RelativeLayout>


            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="2.5"
                android:background="@color/grey"
                android:layout_marginTop="@dimen/padding_mega"
                android:padding="@dimen/padding_mini"/>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="@dimen/padding_mini"
                android:layout_margin="@dimen/padding_mini">


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:cardCornerRadius="100dp"
                    app:cardBackgroundColor="@color/grey"
                    android:padding="@dimen/padding_mini"
                    android:id="@+id/card_step_three"
                    android:layout_centerHorizontal="true"
                    app:cardElevation="@dimen/padding_mini"
                    android:layout_margin="@dimen/padding_mini">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/text_three"
                        android:padding="@dimen/padding_mini"
                        android:textColor="@color/white"
                        android:textAlignment="center" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_step_three"
                    android:text="@string/others_text"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/grey"/>

            </RelativeLayout>


        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/padding_mini"
            android:layout_below="@id/step_layout"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/padding_mini"
            android:padding="@dimen/padding_mini"
            android:id="@+id/card_pharmacy_register">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_register_pharmacy_name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_mini"
                    android:hint="@string/register_pharmacy_name"
                    android:textColorHint="@color/purple_200">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/register_pharmacy_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/register_pharmacy_name"
                        android:importantForAutofill="no"
                        android:inputType="textPersonName"
                        android:labelFor="@id/register_pharmacy_name" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_register_pharmacy_email"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_mini"
                    android:hint="@string/register_pharmacy_email"
                    android:textColorHint="@color/purple_200">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/register_pharmacy_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/register_pharmacy_email"
                        android:importantForAutofill="no"
                        android:inputType="textEmailAddress"
                        android:labelFor="@id/register_pharmacy_email" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_register_pharmacy_phone_number"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_mini"
                    android:hint="@string/register_pharmacy_phone_number"
                    android:textColorHint="@color/purple_200"
                    app:passwordToggleTint="@color/purple_200">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/register_pharmacy_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/register_pharmacy_phone_number"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="11"
                        android:labelFor="@id/register_pharmacy_phone_number" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_register_pharmacy_type"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_mini"
                    android:padding="@dimen/padding_mini"
                    android:hint="@string/register_pharmacy_type"
                    android:textColorHint="@color/purple_200">

                    <AutoCompleteTextView
                        android:id="@+id/register_pharmacy_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/register_pharmacy_type"
                        android:importantForAutofill="no"
                        android:padding="@dimen/padding_mini"
                        android:labelFor="@id/register_pharmacy_type"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_register_pharmacy_motto"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_mini"
                    android:hint="@string/register_pharmacy_motto"
                    android:textColorHint="@color/purple_200">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/register_pharmacy_motto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/register_pharmacy_motto"
                        android:importantForAutofill="no"
                        android:inputType="textMultiLine"
                        android:height="120dp"
                        android:maxLines="4"
                        android:labelFor="@id/register_pharmacy_motto" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next_text"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/padding_mini"
            android:padding="@dimen/padding_mini"
            android:id="@+id/btn_profile_next"/>




    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>