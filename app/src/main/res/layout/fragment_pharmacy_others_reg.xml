<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_color_defined"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.auth.ui.pharmacyregistration.PharmacyOthersReg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/padding_mini"
            android:padding="@dimen/padding_mini"
            app:srcCompat="@drawable/unisach_bee_logo_splash"
            android:contentDescription="@string/unisach_logo_text"
            android:id="@+id/pharm_reg_others_mini_logo"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_pharmacy_title"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/padding_mini"
            android:layout_marginStart="@dimen/padding_mini"
            android:layout_marginEnd="@dimen/padding_mini"
            android:padding="@dimen/padding_mini"
            android:textSize="@dimen/text_xxl"
            android:textColor="@color/white"
            android:layout_below="@id/pharm_reg_others_mini_logo"
            android:id="@+id/register_pharmacy_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_pharmacy_subtitle"
            android:textAlignment="center"
            android:padding="@dimen/padding_mini"
            android:textSize="@dimen/text_l"
            android:textColor="@color/white"
            android:layout_below="@id/register_pharmacy_title"
            android:id="@+id/register_pharmacy_subtitle"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/step_layout"
            android:layout_below="@id/register_pharmacy_subtitle"
            android:weightSum="11"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="@dimen/padding_mini"
                android:layout_margin="@dimen/padding_mini">


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:cardCornerRadius="100dp"
                    app:cardBackgroundColor="@color/custom_accent_color"
                    android:padding="@dimen/padding_mini"
                    android:id="@+id/card_step_one"
                    android:layout_centerHorizontal="true"
                    app:cardElevation="@dimen/padding_mini"
                    android:layout_margin="@dimen/padding_mini">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/text_one"
                        android:padding="@dimen/padding_mini"
                        android:textColor="@color/white"
                        android:textAlignment="center" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_step_one"
                    android:text="@string/profile_text"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/custom_accent_color"/>

            </RelativeLayout>


            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="2.5"
                android:background="@color/custom_accent_color"
                android:layout_marginTop="@dimen/padding_mega"
                android:padding="@dimen/padding_mini"/>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="@dimen/padding_mini"
                android:layout_margin="@dimen/padding_mini">


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:cardCornerRadius="100dp"
                    app:cardBackgroundColor="@color/custom_accent_color"
                    android:padding="@dimen/padding_mini"
                    android:id="@+id/card_step_two"
                    android:layout_centerHorizontal="true"
                    app:cardElevation="@dimen/padding_mini"
                    android:layout_margin="@dimen/padding_mini">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/text_two"
                        android:padding="@dimen/padding_mini"
                        android:textColor="@color/white"
                        android:textAlignment="center" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_step_two"
                    android:text="@string/address_text"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/custom_accent_color"/>

            </RelativeLayout>


            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="2.5"
                android:background="@color/custom_accent_color"
                android:layout_marginTop="@dimen/padding_mega"
                android:padding="@dimen/padding_mini"/>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="@dimen/padding_mini"
                android:layout_margin="@dimen/padding_mini">


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:cardCornerRadius="100dp"
                    app:cardBackgroundColor="@color/custom_accent_color"
                    android:padding="@dimen/padding_mini"
                    android:id="@+id/card_step_three"
                    android:layout_centerHorizontal="true"
                    app:cardElevation="@dimen/padding_mini"
                    android:layout_margin="@dimen/padding_mini">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/text_three"
                        android:padding="@dimen/padding_mini"
                        android:textColor="@color/white"
                        android:textAlignment="center" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_step_three"
                    android:text="@string/others_text"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/custom_accent_color"/>

            </RelativeLayout>


        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/padding_mini"
            android:layout_below="@id/step_layout"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/padding_mini"
            android:padding="@dimen/padding_mini"
            app:cardBackgroundColor="@color/auth_card_color"
            app:cardCornerRadius="@dimen/margin_midi"
            android:id="@+id/card_pharmacy_register">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_register_pharmacy_license_no"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_mini"
                    android:hint="@string/register_pharmacy_license_no"
                    android:textColorHint="@color/custom_accent_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/register_pharmacy_license_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/register_pharmacy_license_no"
                        android:importantForAutofill="no"
                        android:inputType="textPersonName"
                        android:labelFor="@id/register_pharmacy_license_no" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_register_pharmacy_description"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_mini"
                    android:hint="@string/register_pharmacy_description"
                    android:textColorHint="@color/custom_accent_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/register_pharmacy_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/register_pharmacy_description"
                        android:importantForAutofill="no"
                        android:inputType="textMultiLine"
                        android:height="120dp"
                        android:maxLines="4"
                        android:labelFor="@id/register_pharmacy_description" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/margin_mini"
                    android:weightSum="3"
                    android:padding="@dimen/padding_mini">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/padding_mini"
                        android:id="@+id/pharmacy_reg_image_1"
                        android:background="@color/grey"
                        android:contentDescription="@string/pharmacy_reg_image_3"
                        tools:src="@tools:sample/avatars"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/padding_mini"
                        android:contentDescription="@string/pharmacy_reg_image_3"
                        android:background="@color/grey"
                        android:id="@+id/pharmacy_reg_image_2"
                        tools:src="@tools:sample/avatars"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="@string/pharmacy_reg_image_3"
                        android:background="@color/grey"
                        android:layout_margin="@dimen/padding_mini"
                        android:id="@+id/pharmacy_reg_image_3"
                        tools:src="@tools:sample/avatars"/>

                </LinearLayout>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:weightSum="2"
            android:layout_margin="@dimen/padding_mini"
            android:padding="@dimen/padding_mini">

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/back_text"
                android:layout_margin="@dimen/padding_mini"
                android:padding="@dimen/padding_mini"
                app:strokeWidth="1dp"
                app:strokeColor="@color/custom_accent_color"
                android:id="@+id/btn_others_back"/>


            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/finish_text"
                android:layout_margin="@dimen/padding_mini"
                android:padding="@dimen/padding_mini"
                app:backgroundTint="@color/custom_accent_color"
                android:id="@+id/btn_others_finish"/>



        </LinearLayout>




    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>