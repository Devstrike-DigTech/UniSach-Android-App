<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF399386"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SplashScreen">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:id="@+id/splash_image"
        app:srcCompat="@drawable/unisach_bee_logo_splash" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:id="@+id/layout_devstrike"
        android:padding="@dimen/padding_mini">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/devstrike_logo"
            app:srcCompat="@drawable/devstrike_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_l"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_midi"
                android:text="@string/dev_strike_text" />

    </LinearLayout>



</RelativeLayout>